  </licenses>

  <url>https://github.com/cjwizard/cjwizard</url>
  <developers>
    <developer>
      <id>creswick</id>
      <url>https://github.com/creswick</url>
    </developer>
    <developer>
      <id>PhoneixS</id>
      <url>https://github.com/PhoneixS</url>
    </developer>
    <developer>
      <id>guerda</id>
      <url>https://github.com/guerda</url>
    </developer>
  </developers>
